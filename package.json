{
  "devDependencies": {
    "codecov": "3.0.0",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "jest-environment-jsdom": "^22.1.4",
    "lerna": "^2.4.0",
    "lint-staged": "7.0.4",
    "oc": "0.43.1",
    "prettier-eslint-cli": "^4.2.0"
  },
  "scripts": {
    "postinstall": "lerna bootstrap",
    "coverage": "codecov",
    "clean": "lerna clean",
    "dev": "jest --watch",
    "updated": "lerna updated",
    "test": "jest",
    "publish": "lerna publish --exact",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "jest --findRelatedTests",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "packages",
      "acceptance-setup"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/**/*.js",
      "!packages/coverage/**/*",
      "!node_modules/**",
      "!packages/**/scaffold/**/*",
      "!packages/**/utils/**/*"
    ]
  }
}
