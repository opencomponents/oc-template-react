{
  "devDependencies": {
    "codecov": "3.6.1",
    "husky": "4.0.0",
    "jest": "24.9.0",
    "lerna": "^2.4.0",
    "lint-staged": "9.4.0",
    "oc": "0.48.3",
    "prettier-eslint-cli": "5.0.0"
  },
  "scripts": {
    "postinstall": "lerna bootstrap",
    "coverage": "codecov",
    "clean": "lerna clean",
    "dev": "jest --watch",
    "updated": "lerna updated",
    "test": "jest",
    "publish": "lerna publish --exact",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "jest --findRelatedTests",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "packages",
      "acceptance-setup"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/**/*.js",
      "!packages/coverage/**/*",
      "!node_modules/**",
      "!packages/**/scaffold/**/*",
      "!packages/**/utils/**/*"
    ]
  },
  "dependencies": {
    "normalize.css": "8.0.1",
    "oc-template-react-compiler": "^5.1.10"
  }
}
